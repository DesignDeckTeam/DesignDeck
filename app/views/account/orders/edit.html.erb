<h2>编辑需求</h2>

<div class="col-md-4 col-md-offset-4">

	<%= simple_form_for [:account, @order] do |f| %>

		<div class="form-group">
			<%= f.input :title, label: '名称', input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :description, label: '描述', input_html: { class: "form-control"}  %>
			<br>

			<h4>请选择您需要的作品类型</h4>
			<div class="col-md-4 text-center">
				<h5>商标</h5>
				<% if @order.preference_type == "LOGO" %>
					<%= radio_button_tag "order[preference_type]", "LOGO", checked = true %>
				<% else %>
					<%= radio_button_tag "order[preference_type]", "LOGO" %>
				<% end %>
			</div>

			<div class="col-md-4 text-center">
				<h5>产品介绍</h5>
				<% if @order.preference_type == "PRESENTATION" %>
					<%= radio_button_tag "order[preference_type]", "PRESENTATION", checked = true %>
				<% else %>
					<%= radio_button_tag "order[preference_type]", "PRESENTATION" %>
				<% end %>
			</div>
			<div class="col-md-4 text-center">
				<h5>网页设计</h5>
				<% if @order.preference_type == "WEBDESIGN" %>
					<%= radio_button_tag "order[preference_type]", "WEBDESIGN", checked = true %>
				<% else %>
					<%= radio_button_tag "order[preference_type]", "WEBDESIGN" %>
				<% end %>
			</div>



		</div>

  		<div class="form-action">
   			<%= f.submit "提交需求", disable_with: "Submitting...", class: "btn btn-primary pull-right"  %>
    	</div>

	<% end %>
</div>
