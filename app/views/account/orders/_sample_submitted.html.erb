

<!-- 检测到designer已经提交3张sample时，提供一个可以选择其中一个sample的页面 -->

<div class="container-fluid">

	<!-- 一定要有3张sample -->
	<% if Version.decided_samples_for_order(@order).any? %>
		<div class="well text-center">
			<p>已选择设计师的初步方案，等待设计提交初稿</p>
		</div>
	<% else %>
		<div class="well text-center">
			<p>选择设计师提交的方案</p>
		</div>	
		<% submitted_versions = @order.versions %>

		<%= form_tag account_order_choose_style_path(@order), method: :post do %>

			<div class="form-group">
				<% submitted_versions.each do |version| %>
					<% samples = version.samples %>
					<div class="row">
						<% samples.each do |sample| %>
						<div class="col-md-3">
							<%= render_sample(sample) %>
						</div>
						<% end %>
					</div>
					<%= radio_button_tag "order[version_id]", version.id, checked = true %>
				<% end %>
				
				
				<br><br>
				<%= text_area_tag "order[comment]" %>

			</div>

	  		<div class="form-action">
	   			<%= submit_tag "Submit", disable_with: "Submitting...", class: "btn btn-primary pull-right" %>
	    	</div>

		<% end %>

	<% end %>


</div>
