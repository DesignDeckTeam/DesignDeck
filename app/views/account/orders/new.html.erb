



<div class="container">


	<h4 class="text-center">请选择您需要的作品类型</h4>
	<hr>
	<div class="col-md-4 text-center">
		<h5>商标</h5>
		<%= radio_button_tag "order[preference_type]", "LOGO" %>
	</div>
	<div class="col-md-4 text-center">
		<h5>产品展示</h5>
		<%= radio_button_tag "order[preference_type]", "PRESENTATION", checked = true %>
	</div>
	<div class="col-md-4 text-center">
		<h5>网页设计</h5>
		<%= radio_button_tag "order[preference_type]", "WEBDESIGN" %>
	</div>
   <br><br><br><br><br>
	<h2 class="text-center">委托设计</h2><br>
	<hr>

	<%= simple_form_for [:account, @order] do |f| %>

		<div class="form-group">
			<%= f.input :title, label: '名称', input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :description, label: '描述', input_html: { class: "form-control"}  %>
			<br>
      <%= f.input :style_and_regulation, label: '风格和样式', input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :image, label: '上传图片', as: :file  %>
			<br>

		</div>

  		<div class="row">

				<div class="col-md-12">
   			<%= f.submit '提交需求', disable_with: "Submitting...", class: "btn btn-primary col-md-4 col-md-offset-4" %>
    	</div>

	<% end %>
</div>
