
<div class="container">
	<%= simple_form_for [:account, @order] do |f| %>
	<div class="row">
		<h3>设计类型</h3>
		<hr>
		<div class="text-center font-gray">
		<div class="col-md-4">
			<h5>LOGO</h5>
			<%= radio_button_tag "order[preference_type]", "LOGO" %>
		</div>
		<div class="col-md-4">
			<h5>PRESENTATION</h5>
			<%= radio_button_tag "order[preference_type]", "PRESENTATION", checked = true %>
		</div>
		<div class="col-md-4">
			<h5>WEB DESIGN</h5>
			<%= radio_button_tag "order[preference_type]", "WEBDESIGN" %>
			<br>
			<br>
			<br>
		</div>
	</div>
	</div>

	<div class="row">
		<h3>设计信息</h3>
		<hr>
		<div class="col-md-12 font-gray">
			<%= f.input :title, label: "项目名称", input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :description, label: "设计说明", input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :style_and_regulation, label: "风格 & 规格", input_html: { class: "form-control"} %>
			<%= f.input :image, label: "设计意向图片上传", as: :file %>
			<br>
			<br>
			<%= f.button :submit, "提交委托设计" %>
		</div>
	</div>
	<% end %>
</div>
