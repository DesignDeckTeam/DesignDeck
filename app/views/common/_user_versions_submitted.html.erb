

<!-- 检测到designer已经提交3张sample时，提供一个可以选择其中一个sample的页面 -->

<!-- <div class="container-fluid"> -->

	<!-- 一定要有3张sample -->
	<% if Version.decided_version_for_stage(@stage).any? %>
		<div class="well text-center">
			<p>已选择设计师的初步方案，等待设计提交初稿</p>
		</div>
	<% else %>

			<h4>选择设计师提交的方案</h4>
	 <hr>
		<% submitted_versions = @stage.versions %>

		<%= form_tag account_order_select_version_path(@order), method: :post do %>

			<div class="form-group">
				<% submitted_versions.each do |version| %>
					<% samples = version.samples %>
					<div class="row">
						<div class="col-md-11">
							<% samples.each do |sample| %>
							<div class="col-md-3">
								<%= render_sample(sample) %>
							</div>
							<% end %>
						</div>
						<div class="col-md-1">
							<%= radio_button_tag "order[version_id]", version.id, checked = true %>
						</div>
					</div>

					<hr>
				<% end %>

				<br>
				<h4>选择理由</h4>
				<%= simple_form_for "order[comment]" do |f| %>

			  <%= f.input :description %>
				<!-- <%= text_area_tag "order[comment]" %> -->
         <% end %>
			</div>

	  		<div class="form-action">
	   			<%= submit_tag "Submit", disable_with: "Submitting...", class: "btn btn-primary pull-right" %>
	    	</div>

		<% end %>

	<% end %>


</div>
