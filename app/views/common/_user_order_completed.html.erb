<% if @order.attachment.present? %>
<div class="row">
  <div class="col-md-10">
    <h2>下载最终稿件</h2>
  </div>
  <div class="col-md-2">
    <%= link_to("下载", @order.attachment_url, download: "", class: "btn btn-warning with-button")%>
  </div>
</div>
<% else %>
<div class="row">
  <div class="col-md-10">
    <h2>等待设计师上传最终稿件...</h2>
  </div>
  <div class="col-md-2">
    <br>
    <button type="button" class="btn btn-primary with-button" disabled="disabled">下载</button>
  </div>
</div>
<% end %>
<hr>
<%= render partial: "common/selected_version", :locals => { :order => @order } %>
