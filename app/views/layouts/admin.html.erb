<!DOCTYPE html>
<html>
    <head>
        <title>Admin 后台</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag :defaults, "nested_form" %>

    </head>
    <body>
      <div class="container-fluid">
        <%= render "common/navbar" %>
        <%= render "common/flashes" %>
        <div class="row">
          <div class="col-md-2">
            <br><br>
            <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding:20px;">
              <li class="active"> <%= link_to("用户的订单", admin_orders_path) %> </li>
              <li class="active"> <%= link_to("设计师管理", admin_users_path) %> </li>
            </ul>
          </div>
          <div class="col-md-10">
            <%= yield %>
          </div>
          <%= render "common/footer" %>
        </div>
      </div>
    </body>
</html>
