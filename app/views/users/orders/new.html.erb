



<div class="container">
	<h2>委托设计</h2><br>

	<%= simple_form_for [:users, @order] do |f| %>

		<div class="form-group">
			<%= f.input :title, input_html: { class: "form-control"}  %>
			<br>
			<%= f.input :description, input_html: { class: "form-control"}  %>
			<br>
			<h4>请选择您需要的作品类型</h4>
			<div class="col-md-4 text-center">
				<h5>LOGO</h5>
				<%= radio_button_tag "order[type_preference]", "LOGO" %>
			</div>
			<div class="col-md-4 text-center">
				<h5>PRESENTATION</h5>
				<%= radio_button_tag "order[type_preference]", "PRESENTATION", checked = true %>
			</div>
			<div class="col-md-4 text-center">
				<h5>WEB DESIGN</h5>
				<%= radio_button_tag "order[type_preference]", "WEBDESIGN" %>
			</div>
		</div>
		
  		<div class="form-action">
   			<%= f.submit "Submit", disable_with: "Submitting...", class: "btn btn-primary pull-right"  %>
    	</div>

	<% end %>
</div>

