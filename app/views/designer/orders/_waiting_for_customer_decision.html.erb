<h2 class="well text-center">
	正在等待客户选择方案
</h2>


<% if @order.versions.present? %>

  <div class="container-fluid btn-group">
    <% @order.versions.each_with_index do |version,i| %>

    	<div class="row">
    		<%= link_to("第 #{i+1} 稿", designer_order_version_path(@order, version), :class => "btn btn-default") %>
    		<br><br>
    		<% version.samples.each do |sample| %>
    			<div class="col-md-4">
    				<%= render_sample(sample) %>
    			</div>
   				
    		<% end %>

    	</div>

    <% end %>
  </div>
<% end %>

<hr>
