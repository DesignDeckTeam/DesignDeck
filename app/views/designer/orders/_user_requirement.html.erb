
<% if @order.versions.present? %>

  <div class="container-fluid btn-group">
    <% @order.versions.each_with_index do |version,i| %>

    	<div class="row">
    		<%= link_to("第 #{i+1} 稿", designer_order_version_path(@order, version), :class => "btn btn-default") %>
    		<br><br>
    		<% version.samples.each do |sample| %>
    			<div class="col-md-4">
    				<%= render_sample(sample) %>
    			</div>
   				
    		<% end %>

     		

    	</div>

    <% end %>
  </div>
<% end %>

<hr>

<%= link_to("上傳稿件", new_designer_order_version_path(@order), :class => "btn btn-large btn-default") %>
<%= link_to("提交样张给客户", designer_order_designer_submit_sample_path(@order), :class => "btn btn-large btn-default", style: "margin-left:15px;", method: :post) %>