<section class="order-list ">
  <div class="container">
    <div class="row order-list-top">
      
      <div class="col-md-3 designer-left ">
        <%= link_to designer_orders_path(@order, orders: "all_orders"), class:"btn btn-default order-button" do %>
          <i class="fa fa-dot-circle-o"></i>您的全部订单&nbsp;&nbsp;
        <% end %>
        <%= link_to designer_orders_path(@order, orders: "on_going_orders"), class:"btn btn-default order-button" do %>
          <i class="fa fa-play-circle"></i>正在进行的订单
        <% end %>
        <%= link_to designer_orders_path(@order, orders: "new_orders"), class:"btn btn-default order-button" do %>
          <i class="fa fa-pause-circle"></i>可以接收的订单
        <% end %>
        <%= link_to designer_orders_path(@order, orders: "completed"), class:"btn btn-default order-button" do %>
          <i class="fa fa-stop-circle"></i>已经完成的订单
        <% end %>
      </div>

      <% @orders.each_with_index do |order, index| %>
        <%= link_to designer_order_path(order) do %>
          <div class="col-md-9 designer-right">
            <div class="row">
              <div class="col-md-1">
              <h3>&nbsp;&nbsp;<%= index + 1 %></h3>
              </div>
              <div class="col-md-7">
                <h4><%= order.title %><h4>
                <p><%= order.description %></p>
              </div>
              <div class="col-md-4 text-right">
                <p><i class="fa fa-chevron-circle-right"></i><%= order.preference_type %></p>
                <p><span><%= order.state_cn_user %></span><%= order.created_at.strftime("%Y年%m月%d日%H:%M") %></p>
              </div>
            </div>
            <%= render_notification_red_dot(order) %>
          </div>

        <% end %>
      <% end %>
    </div>
  </div>
</section>

