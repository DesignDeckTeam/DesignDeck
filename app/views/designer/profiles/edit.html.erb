


<%= simple_form_for @user, url: designer_profile_path(@user), html: {method: :put} do |f| %>
  <%= f.input :name, label: '请输入你的真实姓名：', error: '必须输入姓名，不能为空' %>
  <%= f.input :designer_intro, label: '请输入简介：' %>
  <%= f.input :designer_production_image, :as => :file %>
  <%= f.button :submit %>
<% end %>
