
<div class="container-fluid">
  <h2 class= "well text-center">帐户信息</h2>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag current_user.gravatar_url(:size => 200) %>
    </div>
    <div class="col-md-6">
      <h4>姓名：<%= @users.name %></h4>
      <br>
      <h4>邮箱：<%= @users.email %></h4>
    </div>
    <div class="col-md-3 pull-right">
      <%= link_to("编辑帐户信息",edit_designer_profile_path(current_user), class: "btn bt-sm btn-default") %>
    </div>
  </div>
  <br>
  <h4>简介：</h4>
  <%= @users.designer_intro %>
  <br><br>
  <h4>作品展示</h4>
  <div class="row">
    <div class="col-md-6">
      <% if @users.designer_production_image.present? %>
        <%= image_tag(@users.designer_production_image.medium.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/400x200&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>
  </div>
</div>
